#! /bin/bash
set -e 

echo "
------------------------------------------------------------------------
------------------------------------------------------------------------
-------------              Fazendo build           ---------------------
------------------------------------------------------------------------
------------------------------------------------------------------------
"

composeFile=docker/docker-compose.yml

docker-compose -f $composeFile build
listImages=($(sed -nr 's/image: *(.+)/\1/p' $composeFile))

testFail=0

echo "
------------------------------------------------------------------------
------------------------------------------------------------------------
-------------            Executando testes         ---------------------
------------------------------------------------------------------------
------------------------------------------------------------------------
"

IFS=""
for imageTag in ${listImages[@]}
do
    if docker run --rm --entrypoint=testDeps "$imageTag" > /dev/null ; then
        echo "passou no teste: '${imageTag}'"
    else
        testFail=1
        echo "FALHOU no teste: '${imageTag}'"
    fi
done

if [[ "$testFail" == "1" ]]; then
    exit 1
fi

docker-compose -f $composeFile  push